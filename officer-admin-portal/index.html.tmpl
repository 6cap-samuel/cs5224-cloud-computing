    async function submitAudit(reportId, payload) {
      const auth = await ensureAuthenticated();
      const response = await fetch(API_BASE_URL + "/reports/" + encodeURIComponent(reportId) + "/audit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Authorization: "Bearer " + auth.idToken
        },
        body: JSON.stringify(payload)
      });
      if (response.status === 401 || response.status === 403) {
        const error = new Error("not_authorised");
        error.code = "not_authorised";
        throw error;
      }
      if (!response.ok) {
        let message = "Failed to submit audit.";
        try {
          const errorBody = await response.json();
          if (errorBody && errorBody.error) {
            message = errorBody.error.replace(/_/g, " ");
          }
        } catch (ignore) {
          // ignore parse errors
        }
        const error = new Error(message);
        error.code = "audit_failed";
        throw error;
      }
      const data = await response.json();
      if (data && data.report) {
        return data.report;
      }
      return data;
    }


    async function fetchWeather() {
      if (!weatherCardEl) {
        return;
      }
      if (weatherStatusEl) {
        if (weatherCardEl.dataset.weatherLoaded === "true") {
          weatherStatusEl.textContent = "Updating latest forecast…";
        } else {
          weatherStatusEl.textContent = "Loading latest forecast…";
        }
      }
      clearWeatherGroups();
      try {
        const response = await fetch(WEATHER_API_URL, { cache: "no-store" });
        if (!response.ok) {
          throw new Error("HTTP " + response.status);
        }
        const payload = await response.json();
        if (!payload || !Array.isArray(payload.items) || payload.items.length === 0) {
          resetWeatherCard("Weather forecast is temporarily unavailable.");
          return;
        }
        if (payload.api_info && payload.api_info.status && payload.api_info.status !== "healthy") {
          resetWeatherCard("Weather service is currently unavailable.");
          return;
        }
        const item = payload.items[0];
        const forecasts = Array.isArray(item.forecasts) ? item.forecasts : [];
        if (forecasts.length === 0) {
          resetWeatherCard("No forecast data provided at the moment.");
          return;
        }
        const areaSet = new Set();
        const grouped = new Map();
        forecasts.forEach(function (entry) {
          if (!entry) {
            return;
          }
          if (entry.area) {
            areaSet.add(entry.area);
          }
          const condition = (entry.forecast || "").trim() || "Unknown";
          if (!grouped.has(condition)) {
            grouped.set(condition, new Set());
          }
          if (entry.area) {
            grouped.get(condition).add(entry.area);
          }
        });
        const groupEntries = Array.from(grouped.entries()).map(function (entry) {
          const condition = entry[0];
          const areas = Array.from(entry[1]).sort(function (a, b) {
            return a.localeCompare(b);
          });
          return {
            condition: condition,
            areas: areas
          };
        }).sort(function (a, b) {
          if (b.areas.length === a.areas.length) {
            return a.condition.localeCompare(b.condition);
          }
          return b.areas.length - a.areas.length;
        });
        const totalAreas = areaSet.size;
        if (weatherUpdatedEl) {
          weatherUpdatedEl.textContent = item.update_timestamp ? "Updated " + formatWeatherTimestamp(item.update_timestamp) : "";
        }
        if (weatherValidityEl) {
          weatherValidityEl.textContent = item.valid_period ? formatWeatherWindow(item.valid_period.start, item.valid_period.end) : "";
        }
        if (weatherStatusEl) {
          if (groupEntries.length === 0) {
            weatherStatusEl.textContent = "No area-level forecasts available.";
          } else {
            const topEntry = groupEntries[0];
            if (totalAreas > 0 && topEntry.areas.length === totalAreas) {
              weatherStatusEl.textContent = topEntry.condition + " expected islandwide.";
            } else if (totalAreas > 0) {
              weatherStatusEl.textContent = topEntry.condition + " in " + topEntry.areas.length + " of " + totalAreas + " areas.";
            } else {
              weatherStatusEl.textContent = topEntry.condition + " expected.";
            }
          }
        }
        if (weatherGroupsEl) {
          weatherGroupsEl.innerHTML = "";
          const fragment = document.createDocumentFragment();
          const MAX_GROUPS = 3;
          const DISPLAY_LIMIT = 6;
          groupEntries.slice(0, MAX_GROUPS).forEach(function (entry) {
            const groupEl = document.createElement("div");
            groupEl.className = "weather-group";
            const title = document.createElement("h3");
            title.textContent = entry.condition;
            groupEl.appendChild(title);
            const list = document.createElement("ul");
            entry.areas.slice(0, DISPLAY_LIMIT).forEach(function (area) {
              const itemEl = document.createElement("li");
              itemEl.textContent = area;
              list.appendChild(itemEl);
            });
            if (entry.areas.length > DISPLAY_LIMIT) {
              const remainderEl = document.createElement("li");
              remainderEl.className = "weather-more";
              remainderEl.textContent = "+" + (entry.areas.length - DISPLAY_LIMIT) + " more area" + (entry.areas.length - DISPLAY_LIMIT === 1 ? "" : "s");
              list.appendChild(remainderEl);
            }
            groupEl.appendChild(list);
            fragment.appendChild(groupEl);
          });
          if (groupEntries.length > MAX_GROUPS) {
            const remainderDetails = groupEntries.slice(MAX_GROUPS).map(function (entry) {
              return entry.condition + " (" + entry.areas.length + ")";
            }).join(", ");
            const summaryEl = document.createElement("div");
            summaryEl.className = "weather-group";
            const summaryTitle = document.createElement("h3");
            summaryTitle.textContent = "Other conditions";
            summaryEl.appendChild(summaryTitle);
            const summaryText = document.createElement("p");
            summaryText.className = "weather-validity";
            summaryText.textContent = remainderDetails;

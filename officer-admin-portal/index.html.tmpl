      } else if (snapshot.api_timestamp) {
        const stamp = formatWeatherTimestamp(snapshot.api_timestamp);
        if (stamp) {
          metaParts.push("Valid as of " + stamp);
        }
      }
      if (snapshot.api_status && snapshot.api_status !== "healthy" && summary.indexOf("Weather service status:") !== 0) {
        metaParts.push("Service status: " + snapshot.api_status);
      }

      return {
        summary: summary,
        meta: metaParts,
        forecasts: forecasts,
        totalForecasts: forecasts.length
      };
    }


        const code = rawCode.indexOf("#") >= 0 ? rawCode.split("#").pop() : (rawCode || "UnknownError");
        const message = data && (data.message || data.Message) ? data.message || data.Message : "Unable to complete authentication.";
        const err = new Error(message);
        err.code = code;
        err.status = response.status;
        throw err;
      }
      return data;
    }


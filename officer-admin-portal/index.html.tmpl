    function buildContextPopup(type, entry, report) {
      const lines = [];
      if (type === "lamppost") {
        lines.push(entry.name || entry.id || "Lamppost");
      } else if (type === "park") {
        lines.push(entry.name || "Park");
        if (entry.type) {
          lines.push(entry.type);
        }
      }
      const distance = typeof entry.distance_m === "number" && isFinite(entry.distance_m)
        ? entry.distance_m >= 1000 ? (entry.distance_m / 1000).toFixed(2) + " km" : entry.distance_m.toFixed(1) + " m"
        : null;
      if (distance) {
        lines.push("Distance: " + distance);
      }
      if (report && report.report_id) {
        lines.push("Related report " + report.report_id);
      }
      return lines.join("<br>");
    }

    function addContextMarker(type, entry, options) {
      if (!entry || typeof entry !== "object") {
        return null;
      }
      const lat = parseCoordinate(entry.latitude);
      const lng = parseCoordinate(entry.longitude);
      if (lat === null || lng === null) {
        return null;
      }
      const map = ensureMap();
      if (!map) {
        return null;
      }
      let layer = null;
      let refs = null;
      let color = "#fb923c";
      if (type === "lamppost") {
        layer = lamppostLayer;
        refs = lamppostMarkerRefs;
        color = "#f97316";
      } else if (type === "park") {
        layer = parkLayer;
        refs = parkMarkerRefs;
        color = "#22c55e";
      }
      if (!layer || !refs) {
        return null;
      }
      const key = entry.id ? type + ":" + entry.id : type + ":" + lat.toFixed(6) + "," + lng.toFixed(6);
      if (refs.has(key)) {
        return refs.get(key);
      }
      const marker = L.circleMarker([lat, lng], {
        radius: type === "lamppost" ? 5 : 6,
        color: color,
        weight: 1,
        fillColor: color,
        fillOpacity: 0.85,
        opacity: 0.9
      });
      const popup = buildContextPopup(type, entry, options && options.report);
      if (popup) {
        marker.bindPopup(popup);
      }
      marker.addTo(layer);
      refs.set(key, marker);
      return marker;
    }

    function plotReportOnMap(report) {
      if (!report || !report.location || !report.image_url) {
        return false;
      }
      const lat = parseCoordinate(report.location.latitude);
      const lng = parseCoordinate(report.location.longitude);
      if (lat === null || lng === null) {
        return false;
      }
      const map = ensureMap();
      if (!map || !mapMarkersLayer) {
        return false;
      }
      const key = report.report_id ? String(report.report_id) : [lat.toFixed(5), lng.toFixed(5), report.submitted_at || ""].join(":");
      if (mapMarkerRefs.has(key)) {
        const existingMarker = mapMarkerRefs.get(key);
        if (existingMarker) {
          mapMarkersLayer.removeLayer(existingMarker);
        }
        mapMarkerRefs.delete(key);
      }
      const latLng = L.latLng(lat, lng);
      const marker = L.marker(latLng);
      marker.bindPopup(buildMapPopup(report));
      mapMarkersLayer.addLayer(marker);
      mapMarkerRefs.set(key, marker);
      if (!mapBounds) {
        mapBounds = L.latLngBounds(latLng, latLng);
      } else {
        mapBounds.extend(latLng);
      }
      if (report && report.location_context) {
        const lamppostMarker = addContextMarker("lamppost", report.location_context.nearest_lamppost, { report: report });
        if (lamppostMarker && mapBounds) {
          mapBounds.extend(lamppostMarker.getLatLng());
        }
        const parkMarker = addContextMarker("park", report.location_context.nearest_park, { report: report });
        if (parkMarker && mapBounds) {
          mapBounds.extend(parkMarker.getLatLng());
        }
      }
      return true;
    }


        const parsed = JSON.parse(raw);
        if (!parsed || typeof parsed !== "object") {
          return null;
        }
        if (!parsed.idToken) {
          return null;
        }
        return {
          idToken: parsed.idToken,
          accessToken: parsed.accessToken || "",
          refreshToken: parsed.refreshToken || null,
          expiresAt: typeof parsed.expiresAt === "number" ? parsed.expiresAt : 0
        };
      } catch (error) {
        console.warn("Unable to restore authentication state", error);
        return null;
      }
    }

    function persistAuth(state) {
      try {
        if (!state) {
          window.localStorage.removeItem(AUTH_STORAGE_KEY);
        } else {
          window.localStorage.setItem(AUTH_STORAGE_KEY, JSON.stringify(state));
        }
      } catch (error) {
        console.warn("Unable to persist authentication state", error);
      }
    }

    function isTokenValid(state) {
      if (!state || !state.idToken || !state.expiresAt) {
        return false;
      }
      return state.expiresAt - TOKEN_EXPIRY_BUFFER_MS > Date.now();
    }

    function setAuthState(state) {
      if (state) {
        exitNewPasswordMode();
        const normalized = {
          idToken: state.idToken,
          accessToken: state.accessToken || "",
          refreshToken: state.refreshToken || null,
          expiresAt: typeof state.expiresAt === "number" ? state.expiresAt : Date.now()
        };
        authState = normalized;
        persistAuth(normalized);
        document.body.dataset.auth = "authenticated";
        if (loginView) {
          loginView.hidden = true;
          loginView.style.display = "none";
          loginView.setAttribute("aria-hidden", "true");
        }
        if (appView) {
          appView.hidden = false;
          appView.style.display = "flex";
          appView.setAttribute("aria-hidden", "false");
        }
        ensureMap();
        startWeatherUpdates();
        setMapStatus("Loading geotagged reports…");
        refreshBtn.disabled = loading;
        loadMoreBtn.disabled = loading || !nextCursor;
        return authState;
      }
      authState = null;
      persistAuth(null);
      document.body.dataset.auth = "anonymous";
      if (appView) {
        appView.hidden = true;
        appView.style.display = "none";
        appView.setAttribute("aria-hidden", "true");
      }
      if (loginView) {
        loginView.hidden = false;
        loginView.style.display = "flex";
        loginView.setAttribute("aria-hidden", "false");
      }
      exitNewPasswordMode({ clearPassword: true });
      refreshBtn.disabled = true;
      loadMoreBtn.disabled = true;
      clearResults();
      stopWeatherUpdates();
      setStatus("");
      return null;
    }

    function signOut(message, variant) {
      setAuthState(null);
      if (message) {
        setLoginStatus(message, variant);
      } else {
        setLoginStatus("Signed out. Please sign in to continue.");
      }
    }

    function buildAuthState(result, fallbackRefreshToken) {
      if (!result || !result.IdToken) {
        throw new Error("Invalid authentication response.");
      }
      const expiresIn = Number(result.ExpiresIn) || 3600;
      return {
        idToken: result.IdToken,
        accessToken: result.AccessToken || "",
        refreshToken: result.RefreshToken || fallbackRefreshToken || null,
        expiresAt: Date.now() + Math.max(expiresIn, 0) * 1000
      };
    }

    function getFriendlyMessage(code, fallback) {
      if (code && friendlyMessages[code]) {
        return friendlyMessages[code];
      }
      if (fallback) {
        return fallback;
      }
      return "Unable to sign in right now. Please try again.";
    }

    async function initiateAuth(payload) {
      const response = await fetch(COGNITO_ENDPOINT, {
        method: "POST",
        headers: {
          "Content-Type": "application/x-amz-json-1.1",
          "X-Amz-Target": "AWSCognitoIdentityProviderService.InitiateAuth"
        },
        body: JSON.stringify(payload)
      });
      let data = null;
      try {
        data = await response.json();
      } catch (error) {
        data = null;
      }
      if (!response.ok) {
        const rawCode = data && (data.__type || data.code) ? String(data.__type || data.code) : "";
        const code = rawCode.indexOf("#") >= 0 ? rawCode.split("#").pop() : (rawCode || "UnknownError");
        const message = data && (data.message || data.Message) ? data.message || data.Message : "Unable to complete authentication.";
        const err = new Error(message);
        err.code = code;
        err.status = response.status;
        throw err;
      }
      return data;
    }

    async function respondToAuthChallenge(payload) {
      const response = await fetch(COGNITO_ENDPOINT, {
        method: "POST",
        headers: {
          "Content-Type": "application/x-amz-json-1.1",
          "X-Amz-Target": "AWSCognitoIdentityProviderService.RespondToAuthChallenge"
        },
        body: JSON.stringify(payload)
      });
      let data = null;
      try {
        data = await response.json();
      } catch (error) {
        data = null;
      }
      if (!response.ok) {
        const rawCode = data && (data.__type || data.code) ? String(data.__type || data.code) : "";
        const code = rawCode.indexOf("#") >= 0 ? rawCode.split("#").pop() : (rawCode || "UnknownError");
        const message = data && (data.message || data.Message) ? data.message || data.Message : "Unable to complete authentication.";
        const err = new Error(message);
        err.code = code;
        err.status = response.status;
        throw err;
      }
      return data;
    }

    async function refreshAuth() {
      if (!authState || !authState.refreshToken) {
        const err = new Error("not_authenticated");
        err.code = "not_authenticated";
        throw err;
      }
      if (refreshPromise) {
        return refreshPromise;
      }
      refreshPromise = (async function () {
        const response = await initiateAuth({
          AuthFlow: "REFRESH_TOKEN_AUTH",
          ClientId: COGNITO_CLIENT_ID,
          AuthParameters: {
            REFRESH_TOKEN: authState.refreshToken
          }
        });
        if (!response || !response.AuthenticationResult) {
          throw new Error("Failed to refresh session.");
        }
        const refreshed = buildAuthState(response.AuthenticationResult, authState.refreshToken);
        setAuthState(refreshed);
        return refreshed;
      })().catch(function (error) {
        console.error("Failed to refresh token", error);
        signOut("Session expired. Please sign in again.", "error");
        const err = new Error("not_authenticated");
        err.code = "not_authenticated";
        throw err;
      }).finally(function () {
        refreshPromise = null;
      });
      return refreshPromise;
    }

    async function ensureAuthenticated() {
      if (authState && isTokenValid(authState)) {
        return authState;
      }
      if (authState && authState.refreshToken) {
        try {
          return await refreshAuth();
        } catch (error) {
          const err = new Error("not_authenticated");
          err.code = "not_authenticated";
          throw err;
        }
      }
      const err = new Error("not_authenticated");
      err.code = "not_authenticated";
      throw err;
    }

    async function handleNewPasswordSubmission() {
      if (!pendingChallenge || pendingChallenge.name !== "NEW_PASSWORD_REQUIRED") {
        exitNewPasswordMode({ clearPassword: true });
        setLoginStatus("Session expired. Please sign in again.", "error");
        return;
      }
      const newPassword = (newPasswordInput && typeof newPasswordInput.value === "string" ? newPasswordInput.value.trim() : "");
      const confirmPassword = (confirmPasswordInput && typeof confirmPasswordInput.value === "string" ? confirmPasswordInput.value.trim() : "");
      if (!newPassword) {
        setLoginStatus("Enter a new password to continue.", "error");
        if (newPasswordInput && typeof newPasswordInput.focus === "function") {
          newPasswordInput.focus();
        }
        return;
      }
      if (newPassword !== confirmPassword) {
        setLoginStatus("Passwords do not match.", "error");
        if (confirmPasswordInput) {
          confirmPasswordInput.value = "";
          if (typeof confirmPasswordInput.focus === "function") {
            confirmPasswordInput.focus();
          }
        }
        return;
      }

      const originalText = loginButton.textContent;
      loginButton.disabled = true;
      loginButton.textContent = "Updating…";
      loginButton.setAttribute("aria-busy", "true");
      setLoginStatus("Updating your password…");

      try {
        const userIdentifier = (pendingChallenge.parameters && pendingChallenge.parameters.USER_ID_FOR_SRP) || pendingChallenge.username;
        const challengePayload = {
          ChallengeName: "NEW_PASSWORD_REQUIRED",
          ClientId: COGNITO_CLIENT_ID,
          Session: pendingChallenge.session,
          ChallengeResponses: {
            USERNAME: userIdentifier,
            NEW_PASSWORD: newPassword
          }
        };
        const response = await respondToAuthChallenge(challengePayload);
        if (response.ChallengeName) {
          setLoginStatus("Additional verification is required. Please contact an administrator.", "error");
          exitNewPasswordMode({ clearPassword: true });
          return;
        }
        if (!response.AuthenticationResult) {
          throw new Error("Authentication failed after password update.");
        }
        exitNewPasswordMode({ clearPassword: true });
        const newState = buildAuthState(response.AuthenticationResult);
        setLoginStatus("");
        setAuthState(newState);
        await fetchReports({ reset: true });
      } catch (error) {
        console.error("Failed to set new password", error);
        const message = getFriendlyMessage(error && error.code, error && error.message);
        setLoginStatus(message, "error");
        if (newPasswordInput) {
          newPasswordInput.value = "";
          if (typeof newPasswordInput.focus === "function") {
            newPasswordInput.focus();
          }
        }
        if (confirmPasswordInput) {
          confirmPasswordInput.value = "";
        }
      } finally {
        loginButton.disabled = false;
        if (loginForm && loginForm.dataset.mode === "new-password") {
          loginButton.textContent = originalText;
        }
        loginButton.removeAttribute("aria-busy");
      }
    }

    async function fetchReports(options) {
      if (loading) {
        return;
      }
      const config = options || {};
      let auth = null;
      try {
        auth = await ensureAuthenticated();
      } catch (error) {
        if (error && error.code === "not_authenticated") {
          setStatus("");
          setLoginStatus("Sign in with your officer credentials to view reports.");
          return;
        }
        console.error(error);
        setStatus("Unable to verify your session. Please sign in again.", "error");
        return;
      }

      setLoading(true);
      const reset = Boolean(config.reset);
      if (reset) {
        clearResults();
        setStatus("Fetching latest reports…");
        setMapStatus("Loading geotagged reports…");
      } else {
        setStatus("Loading more reports…");
        setMapStatus("Adding mapped reports…");
      }
      ensureMap();

      const params = new URLSearchParams({ limit: "24" });
      if (!reset && nextCursor) {
        params.set("cursor", nextCursor);
      }

      try {
        const response = await fetch(API_BASE_URL + "/reports?" + params.toString(), {
          headers: {
            Authorization: "Bearer " + auth.idToken
          }
        });

        if (response.status === 401 || response.status === 403) {
          console.warn("Authenticated request rejected with", response.status);
          setStatus("Unable to load reports with the current session. Please refresh later or contact an administrator.", "error");
          setMapStatus("Current session is not authorised to view mapped reports.", "warning");
          return;
        }

        if (!response.ok) {
          throw new Error("HTTP " + response.status);
        }

        const data = await response.json();
        const items = Array.isArray(data.items) ? data.items : [];

        if (reset) {
          resultsEl.innerHTML = "";
        }

        if (items.length === 0 && resultsEl.children.length === 0) {
          emptyStateEl.hidden = false;
        } else {
          emptyStateEl.hidden = true;
        }

        let mappedThisBatch = 0;
        items.forEach(function (item) {
          const card = renderReportCard(item);
          if (item && item.report_id) {
            reportCardRefs.set(item.report_id, card);
          }
          resultsEl.appendChild(card);
          if (plotReportOnMap(item)) {
            mappedThisBatch += 1;
          }
        });

        nextCursor = data.next_cursor || null;
        loadMoreBtn.disabled = !nextCursor;

        const count = resultsEl.children.length;
        if (nextCursor) {
          setStatus("Showing " + count + " report" + (count === 1 ? "" : "s") + " (more available)…");
        } else {
          setStatus("Showing " + count + " report" + (count === 1 ? "" : "s") + ".");
        }
        updateMapAfterData({ refit: reset });
        if (mappedThisBatch === 0 && (!mapMarkersLayer || mapMarkersLayer.getLayers().length === 0)) {
          setMapStatus("No mapped reports yet.");
        }
      } catch (error) {
        console.error(error);
        setStatus("Unable to load reports right now. Please retry in a moment.", "error");
        setMapStatus("Unable to update map with the latest reports.", "warning");
      } finally {
        setLoading(false);
      }
    }

    if (reportModalCloseBtn) {
      reportModalCloseBtn.addEventListener("click", function () {
        closeReportModal();
      });
    }

    if (reportModalDismissBtn) {
      reportModalDismissBtn.addEventListener("click", function () {
        closeReportModal();
      });
    }

    if (reportModalBackdrop) {
      reportModalBackdrop.addEventListener("click", function (event) {
        if (event.target === reportModalBackdrop) {
          closeReportModal();
        }
      });
    }

    document.addEventListener("keydown", function (event) {
      if (event.key === "Escape" && isReportModalOpen()) {
        event.preventDefault();
        closeReportModal();
      }
    });

    if (refreshBtn) {
      refreshBtn.addEventListener("click", function () {
        fetchReports({ reset: true });
      });
    }

    if (loadMoreBtn) {
      loadMoreBtn.addEventListener("click", function () {
        fetchReports({ reset: false });
      });
    }

    if (logoutBtn) {
      logoutBtn.addEventListener("click", function () {
        signOut("You have signed out.");
      });
    }

    if (loginForm) {
      loginForm.addEventListener("submit", async function (event) {
        event.preventDefault();
        if (pendingChallenge && pendingChallenge.name === "NEW_PASSWORD_REQUIRED") {
          await handleNewPasswordSubmission();
          return;
        }
        const username = usernameInput.value.trim();
        const password = passwordInput.value;
        if (!username || !password) {
          setLoginStatus("Enter your email and password to continue.", "error");
          return;
        }

        const originalText = loginButton.textContent;
        loginButton.disabled = true;
        loginButton.textContent = "Signing in…";
        loginButton.setAttribute("aria-busy", "true");
        setLoginStatus("Signing you in…");

        try {
          const response = await initiateAuth({
            AuthFlow: "USER_PASSWORD_AUTH",
            ClientId: COGNITO_CLIENT_ID,
            AuthParameters: {
              USERNAME: username,
              PASSWORD: password
            }
          });

          if (response.ChallengeName === "NEW_PASSWORD_REQUIRED") {
            enterNewPasswordMode({
              name: response.ChallengeName,
              session: response.Session,
              parameters: response.ChallengeParameters || {},
              username: username
            });
            return;
          }

          if (response.ChallengeName) {
            const err = new Error("Unsupported authentication challenge: " + response.ChallengeName);
            err.code = response.ChallengeName;
            throw err;
          }

          if (!response.AuthenticationResult) {
            throw new Error("Authentication failed. Please try again.");
          }

          const newState = buildAuthState(response.AuthenticationResult);
          setAuthState(newState);
          setLoginStatus("");
          passwordInput.value = "";
          await fetchReports({ reset: true });
        } catch (error) {
          console.error("Login failed", error);
          let message = "";
          if (error && error.name === "TypeError" && !error.code) {
            message = "Unable to reach the authentication service. Check your connection and try again.";
          } else {
            message = getFriendlyMessage(error && error.code, error && error.message);
          }
          setLoginStatus(message, "error");
          passwordInput.value = "";
          if (typeof passwordInput.focus === "function") {
            passwordInput.focus();
          }
        } finally {
          loginButton.disabled = false;
          if (loginForm && loginForm.dataset.mode === "new-password") {
            loginButton.textContent = "Set new password";
          } else {
            loginButton.textContent = originalText;
          }
          loginButton.removeAttribute("aria-busy");
        }
      });
    }

    if (cancelNewPasswordBtn) {
      cancelNewPasswordBtn.addEventListener("click", function () {
        exitNewPasswordMode({ clearPassword: true });
        if (usernameInput) {
          usernameInput.value = "";
          if (typeof usernameInput.focus === "function") {
            usernameInput.focus();
          }
        }
        if (passwordInput) {
          passwordInput.value = "";
        }
        setLoginStatus("Sign in with your officer credentials to access the admin portal.");
      });
    }

    const restoredAuth = loadStoredAuth();
    if (restoredAuth) {
      setAuthState(restoredAuth);
      if (isTokenValid(authState)) {
        fetchReports({ reset: true });
      } else if (authState && authState.refreshToken) {
        setLoginStatus("Restoring your session…");
        refreshAuth().then(function () {
          setLoginStatus("");
          fetchReports({ reset: true });
        }).catch(function () {
          // refreshAuth already handled sign-out messaging
        });
      } else {
        signOut("Session expired. Please sign in again.", "error");
      }
    } else {
      setAuthState(null);
      setLoginStatus("Sign in with your officer credentials to access the admin portal.");
    }
  </script>

    async function loadAuditHistory(report, options) {
      if (!report || !report.report_id || !report.submitted_at) {
        return;
      }
      const state = getAuditHistoryState(report.report_id);
      if (!state || state.loading) {
        return;
      }
      const reset = Boolean(options && options.reset);
      if (!reset && state.nextCursor == null && state.initialized) {
        return;
      }

      state.loading = true;
      state.error = null;
      const params = new URLSearchParams({
        submitted_at: report.submitted_at,
        limit: "10"
      });
      if (!reset && state.nextCursor != null) {
        params.set("cursor", String(state.nextCursor));
      }

      try {
        const auth = await ensureAuthenticated();
        const response = await fetch(
          API_BASE_URL + "/reports/" + encodeURIComponent(report.report_id) + "/history?" + params.toString(),
          {
            headers: {
              Authorization: "Bearer " + auth.idToken
            }
          }
        );
        if (response.status === 401 || response.status === 403) {
          throw new Error("not_authorised");
        }
        if (!response.ok) {
          throw new Error("HTTP " + response.status);
        }
        const data = await response.json();
        const fetched = Array.isArray(data.items) ? data.items : [];
        if (reset) {
          state.items = fetched;
        } else {
          state.items = state.items.concat(fetched);
        }
        state.nextCursor = data.next_cursor != null ? data.next_cursor : null;
        state.totalCount = typeof data.total_count === "number" ? data.total_count : state.items.length;
        state.initialized = true;
      } catch (error) {
        console.error("Failed to load audit history", error);
        if (error && error.message === "not_authorised") {
          state.error = "Current session cannot load audit history.";
        } else {
          state.error = "Unable to load history.";
        }

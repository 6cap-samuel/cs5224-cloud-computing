    function plotReportOnMap(report) {
      if (!report || !report.location || !report.image_url) {
        return false;
      }
      const lat = parseCoordinate(report.location.latitude);
      const lng = parseCoordinate(report.location.longitude);
      if (lat === null || lng === null) {
        return false;
      }
      const map = ensureMap();
      if (!map || !mapMarkersLayer) {
        return false;
      }
      const key = report.report_id ? String(report.report_id) : [lat.toFixed(5), lng.toFixed(5), report.submitted_at || ""].join(":");
      if (mapMarkerRefs.has(key)) {
        const existingMarker = mapMarkerRefs.get(key);
        if (existingMarker) {
          mapMarkersLayer.removeLayer(existingMarker);
        }
        mapMarkerRefs.delete(key);
      }
      const latLng = L.latLng(lat, lng);
      const marker = L.marker(latLng);
      marker.bindPopup(buildMapPopup(report));
      mapMarkersLayer.addLayer(marker);
      mapMarkerRefs.set(key, marker);
      if (!mapBounds) {
        mapBounds = L.latLngBounds(latLng, latLng);
      } else {
        mapBounds.extend(latLng);
      }
      return true;

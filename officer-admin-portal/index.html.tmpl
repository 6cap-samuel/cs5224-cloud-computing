    function summarizeWeatherSnapshot(snapshot) {
      if (!snapshot || typeof snapshot !== "object") {
        return null;
      }
      const nearest = snapshot.nearest_area && typeof snapshot.nearest_area === "object" ? snapshot.nearest_area : null;
      const rawForecasts = Array.isArray(snapshot.forecasts) ? snapshot.forecasts : [];
      const forecasts = rawForecasts
        .map(function (entry) {
          if (!entry || (entry.forecast == null && entry.area == null)) {
            return null;
          }
          const forecastText = entry.forecast ? String(entry.forecast).trim() : "";
          const areaText = entry.area ? String(entry.area).trim() : "";
          if (!forecastText && !areaText) {
            return null;
          }
          return {
            forecast: forecastText,
            area: areaText
          };
        })
        .filter(Boolean);

      let summary = "";
      if (nearest && nearest.forecast) {
        summary = String(nearest.forecast);
        if (nearest.area) {
          summary += " near " + String(nearest.area);
        }
        if (typeof nearest.distance_km === "number" && isFinite(nearest.distance_km)) {
          summary += " (~" + nearest.distance_km.toFixed(1) + " km away)";
        }
      } else if (forecasts.length > 0) {
        const first = forecasts[0];
        if (first.forecast) {
          summary = first.forecast;
          if (first.area) {
            summary += " in " + first.area;
          }
        }
      }

      if (!summary) {
        if (snapshot.api_status && snapshot.api_status !== "healthy") {
          summary = "Weather service status: " + snapshot.api_status;
        } else if (forecasts.length > 0) {
          const first = forecasts[0];
          summary = (first.area || "Forecast") + ": " + (first.forecast || "Unknown");
        } else {
          return null;
        }
      }

      const metaParts = [];
      if (snapshot.valid_period && typeof snapshot.valid_period === "object") {
        const windowText = formatWeatherWindow(snapshot.valid_period.start, snapshot.valid_period.end);
        if (windowText) {
          metaParts.push(windowText);
        }
      }
      if (snapshot.fetched_at) {
        const fetched = formatWeatherTimestamp(snapshot.fetched_at);
        if (fetched) {
          metaParts.push("Captured " + fetched);
        }
      } else if (snapshot.api_timestamp) {
        const stamp = formatWeatherTimestamp(snapshot.api_timestamp);
        if (stamp) {
          metaParts.push("Valid as of " + stamp);
        }
      }
      if (snapshot.api_status && snapshot.api_status !== "healthy" && summary.indexOf("Weather service status:") !== 0) {
        metaParts.push("Service status: " + snapshot.api_status);
      }

      return {
        summary: summary,
        meta: metaParts,
        forecasts: forecasts,
        totalForecasts: forecasts.length
      };
    }


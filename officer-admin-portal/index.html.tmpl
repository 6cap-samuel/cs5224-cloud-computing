<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>VapeWatch Officer Admin Portal</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="">
  <style>
    :root {
      --background: #0f172a;
      --card-bg: #1e293b;
      --panel-bg: rgba(15, 23, 42, 0.9);
      --text-primary: #f8fafc;
      --text-muted: #cbd5f5;
      --accent: #38bdf8;
      --accent-dark: #0ea5e9;
      --border: rgba(148, 163, 184, 0.2);
      --danger: #f87171;
      --success: #4ade80;
    }

    * {
      box-sizing: border-box;
    }

    [hidden] {
      display: none !important;
    }

    body[data-auth="anonymous"] #app-view {
      display: none !important;
    }

    body[data-auth="authenticated"] #login-view {
      display: none !important;
    }

    body[data-auth="authenticated"] #app-view {
      display: flex;
    }

    body {
      margin: 0;
      min-height: 100vh;
      font-family: "Inter", "Segoe UI", "Helvetica Neue", Arial, sans-serif;
      background: radial-gradient(circle at top, rgba(14, 116, 144, 0.35), transparent 55%),
                  radial-gradient(circle at bottom, rgba(99, 102, 241, 0.25), transparent 45%),
                  var(--background);
      color: var(--text-primary);
      display: flex;
      flex-direction: column;
    }

    header {
      padding: 2rem 1.5rem 1rem;
    }

    .brand {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      max-width: 960px;
      margin: 0 auto;
    }

    .brand h1 {
      font-size: 2rem;
      margin: 0;
      letter-spacing: -0.01em;
    }

    .brand p {
      margin: 0;
      color: var(--text-muted);
    }

    main {
      flex: 1;
      width: 100%;
      max-width: 1100px;
      margin: 0 auto 3rem;
      padding: 0 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    #app-view {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    #login-view {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2.5rem 1.5rem 4rem;
    }

    .login-card {
      background: var(--panel-bg);
      border: 1px solid var(--border);
      border-radius: 20px;
      padding: 2.5rem;
      max-width: 420px;
      width: 100%;
      box-shadow: 0 30px 45px rgba(15, 23, 42, 0.45);
      display: flex;
      flex-direction: column;
      gap: 1.4rem;
    }

    .login-card h2 {
      margin: 0;
      font-size: 1.6rem;
      letter-spacing: -0.01em;
    }

    .login-card p {
      margin: 0;
      color: var(--text-muted);
      font-size: 0.95rem;
      line-height: 1.6;
    }

    .auth-field {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .auth-field label {
      font-weight: 600;
      font-size: 0.9rem;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      color: #e2e8f0;
    }

    .stack {
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
    }

    .auth-note {
      margin: 0;
      color: var(--text-muted);
      font-size: 0.9rem;
      line-height: 1.5;
    }

    .auth-field input {
      padding: 0.85rem 1rem;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: rgba(15, 23, 42, 0.6);
      color: var(--text-primary);
      font-size: 1rem;
      transition: border-color 0.2s ease, box-shadow 0.2s ease, background-color 0.2s ease;
    }

    .auth-field input::placeholder {
      color: rgba(203, 213, 225, 0.6);
    }

    .auth-field input:focus {
      outline: none;
      border-color: var(--accent);
      background: rgba(15, 23, 42, 0.85);
      box-shadow: 0 0 0 4px rgba(56, 189, 248, 0.15);
    }

    .auth-actions {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .auth-actions .button {
      width: 100%;
      text-align: center;
    }

    .auth-status {
      min-height: 1.4rem;
      font-size: 0.95rem;
      color: var(--text-muted);
    }

    .auth-status[data-variant="error"] {
      color: var(--danger);
    }

    .auth-status[data-variant="success"] {
      color: var(--success);
    }

    .auth-secondary-actions {
      display: flex;
      justify-content: flex-end;
    }

    .controls {
      display: flex;
      flex-direction: column;
      background: rgba(15, 23, 42, 0.45);
      border: 1px solid var(--border);
      border-radius: 18px;
      padding: 1rem 1.25rem;
      gap: 0.9rem;
    }

    .controls-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      align-items: center;
    }

    .controls-group {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .controls-row .spacer {
      flex: 1;
    }

    .button {
      border: none;
      background: linear-gradient(135deg, var(--accent), var(--accent-dark));
      color: var(--background);
      font-weight: 600;
      padding: 0.65rem 1.4rem;
      border-radius: 999px;
      cursor: pointer;
      transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      box-shadow: none;
      transform: none;
    }

    .button:not(:disabled):hover {
      transform: translateY(-1px);
      box-shadow: 0 12px 20px rgba(56, 189, 248, 0.25);
    }

    .button-ghost {
      background: transparent;
      color: var(--text-muted);
      border: 1px solid var(--border);
    }

    .button-ghost:not(:disabled):hover {
      color: var(--text-primary);
      border-color: rgba(148, 163, 184, 0.6);
      box-shadow: none;
    }

    .status {
      min-height: 1.5rem;
      font-size: 0.95rem;
      color: var(--text-muted);
    }

    .status[data-variant="error"] {
      color: var(--danger);
    }

    .status[data-variant="success"] {
      color: var(--success);
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.25rem;
    }

    .map-panel {
      background: rgba(15, 23, 42, 0.45);
      border: 1px solid var(--border);
      border-radius: 18px;
      padding: 1rem 1.25rem 1.25rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      min-height: 360px;
    }

    .map-toolbar {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 0.75rem;
    }

    .map-toolbar h2 {
      margin: 0;
      font-size: 1rem;
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }

    .map-status {
      flex: 1;
      text-align: right;
      font-size: 0.85rem;
      color: var(--text-muted);
    }

    .map-status[data-variant="warning"] {
      color: #fbbf24;
    }

    .map-canvas {
      border-radius: 14px;
      overflow: hidden;
      min-height: 320px;
      height: 360px;
    }

    #reports-map {
      width: 100%;
      height: 100%;
    }

    .map-popup {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
      min-width: 180px;
      max-width: 240px;
    }

    .map-popup-title {
      font-weight: 600;
      font-size: 0.95rem;
      color: var(--text-primary);
    }

    .map-popup-meta {
      font-size: 0.83rem;
      color: var(--text-muted);
      line-height: 1.4;
    }

    .map-popup img {
      width: 100%;
      border-radius: 8px;
    }

    .card {
      background: var(--panel-bg);
      border: 1px solid var(--border);
      border-radius: 18px;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      box-shadow: 0 20px 35px rgba(15, 23, 42, 0.35);
    }

    .card h2 {
      margin: 0.75rem 0 0;
      font-size: 1rem;
      letter-spacing: 0.02em;
    }

    .card.card-compact {
      cursor: pointer;
      transition: transform 0.18s ease, box-shadow 0.18s ease;
    }

    .card.card-compact:hover,
    .card.card-compact:focus-within {
      transform: translateY(-2px);
      box-shadow: 0 28px 45px rgba(15, 23, 42, 0.45);
    }

    .card-badge {
      position: absolute;
      top: 0.75rem;
      right: 0.75rem;
      background: rgba(34, 197, 94, 0.85);
      color: #0f172a;
      font-size: 0.72rem;
      font-weight: 600;
      padding: 0.25rem 0.55rem;
      border-radius: 999px;
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }

    .card-badge[data-status="REJECTED"] {
      background: rgba(248, 113, 113, 0.85);
      color: #1f2937;
    }

    .card-badge[data-status="NEEDS_REVIEW"] {
      background: rgba(251, 191, 36, 0.9);
      color: #1f2937;
    }

    .card-actions {
      display: flex;
      justify-content: flex-end;
      margin-top: 0.5rem;
    }

    .weather-card {
      gap: 0.9rem;
    }

    .weather-header {
      display: flex;
      flex-wrap: wrap;
      align-items: baseline;
      gap: 0.5rem;
    }

    .weather-updated {
      font-size: 0.85rem;
      color: var(--text-muted);
    }

    .weather-status {
      margin: 0;
      font-size: 0.95rem;
    }

    .weather-validity {
      margin: 0;
      font-size: 0.85rem;
      color: var(--text-muted);
    }

    .weather-groups {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 0.75rem;
    }

    .weather-group {
      display: flex;
      flex-direction: column;
      gap: 0.35rem;
      background: rgba(15, 23, 42, 0.55);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 0.75rem;
    }

    .weather-group h3 {
      margin: 0;
      font-size: 0.92rem;
    }

    .weather-group ul {
      margin: 0;
      padding-left: 1rem;
      font-size: 0.85rem;
      color: var(--text-muted);
    }

    .weather-group li + li {
      margin-top: 0.25rem;
    }

    .weather-more {
      color: var(--text-muted);
      font-style: italic;
    }

    .meta {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 0.35rem 0.75rem;
      font-size: 0.85rem;
      color: var(--text-muted);
    }

    .meta span {
      display: flex;
      gap: 0.35rem;
      align-items: baseline;
      line-height: 1.4;
    }

    .meta strong {
      color: var(--text-primary);
      font-weight: 600;
    }

    .notes {
      font-size: 0.92rem;
      line-height: 1.5;
      background: rgba(15, 23, 42, 0.55);
      border-radius: 14px;
      padding: 0.75rem;
      border: 1px solid var(--border);
    }

    .report-weather {
      display: flex;
      flex-direction: column;
      gap: 0.35rem;
      background: rgba(15, 23, 42, 0.55);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 0.75rem;
      font-size: 0.85rem;
    }

    .report-weather h3 {
      margin: 0;
      font-size: 0.9rem;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      color: var(--text-muted);
    }

    .report-weather-status {
      margin: 0;
      font-size: 0.95rem;
      color: var(--text-primary);
    }

    .report-weather-meta {
      margin: 0;
      color: var(--text-muted);
      font-size: 0.8rem;
    }

    .report-weather-areas {
      margin: 0;
      padding-left: 1.1rem;
      color: var(--text-muted);
    }

    .report-weather-areas li + li {
      margin-top: 0.2rem;
    }

    .report-context {
      display: flex;
      flex-direction: column;
      gap: 0.35rem;
      background: rgba(15, 23, 42, 0.55);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 0.75rem;
      font-size: 0.85rem;
    }

    .report-context h3 {
      margin: 0;
      font-size: 0.9rem;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      color: var(--text-muted);
    }

    .report-context p {
      margin: 0;
      color: var(--text-primary);
      font-size: 0.95rem;
    }

    .report-context small {
      color: var(--text-muted);
      font-size: 0.8rem;
    }

    .modal-backdrop {
      position: fixed;
      inset: 0;
      background: rgba(15, 23, 42, 0.75);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
      z-index: 1000;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.2s ease;
    }

    .modal-backdrop[data-open="true"] {
      opacity: 1;
      pointer-events: auto;
    }

    .modal-card {
      max-width: 720px;
      width: 100%;
      background: rgba(15, 23, 42, 0.92);
      border-radius: 18px;
      border: 1px solid rgba(148, 163, 184, 0.35);
      box-shadow: 0 30px 80px rgba(15, 23, 42, 0.55);
      display: flex;
      flex-direction: column;
      max-height: 90vh;
      overflow: hidden;
    }

    .modal-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid rgba(148, 163, 184, 0.25);
    }

    .modal-header h2 {
      margin: 0;
      font-size: 1.1rem;
      letter-spacing: 0.04em;
    }

    .modal-close {
      appearance: none;
      border: none;
      background: transparent;
      color: var(--text-muted);
      font-size: 1.2rem;
      cursor: pointer;
      padding: 0.25rem;
      border-radius: 999px;
      transition: color 0.15s ease, background 0.15s ease;
    }

    .modal-close:hover,
    .modal-close:focus {
      color: var(--text-primary);
      background: rgba(148, 163, 184, 0.18);
      outline: none;
    }

    .modal-body {
      overflow-y: auto;
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .modal-footer {
      padding: 1rem 1.5rem;
      border-top: 1px solid rgba(148, 163, 184, 0.2);
      display: flex;
      justify-content: flex-end;
    }

    .modal-footer .button {
      background: rgba(148, 163, 184, 0.25);
      color: var(--text-primary);
      border: 1px solid rgba(148, 163, 184, 0.4);
    }

    .modal-footer .button:hover {
      box-shadow: none;
      transform: translateY(-1px);
    }

    .preview {
      background: rgba(15, 23, 42, 0.65);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 180px;
    }

    .preview img {
      max-width: 100%;
      max-height: 240px;
      border-radius: 12px;
      display: block;
    }

    .empty {
      text-align: center;
      color: var(--text-muted);
      padding: 3rem 0;
      font-size: 1rem;
    }

    footer {
      text-align: center;
      color: rgba(226, 232, 240, 0.55);
      padding: 1.5rem 1rem 2.5rem;
      font-size: 0.85rem;
    }

    @media (max-width: 768px) {
      .login-card {
        padding: 2rem;
      }

      .controls {
        padding: 1rem;
      }

      .controls-row {
        flex-direction: column;
        align-items: stretch;
      }

      .button-ghost {
        width: 100%;
        text-align: center;
      }

      .map-panel {
        padding: 1rem;
      }

      .map-canvas {
        height: 300px;
        min-height: 260px;
      }
    }

    @media (max-width: 640px) {
      .brand h1 {
        font-size: 1.6rem;
      }

      #login-view {
        padding: 2rem 1rem 3rem;
      }

      .login-card {
        padding: 1.75rem;
      }

      .grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="brand">
      <h1>VapeWatch Officer Admin Portal</h1>
      <p>Review incoming citizen submissions, monitor locations, and triage reports in real time.</p>
    </div>
  </header>
  <main>
    <section id="login-view" aria-labelledby="login-title">
      <form id="login-form" class="login-card" autocomplete="on" novalidate>
        <div>
          <h2 id="login-title">Officer login</h2>
          <p>Sign in with your authorised VapeWatch officer account to access the admin workspace.</p>
        </div>
        <div id="login-fields" class="stack">
          <div class="auth-field">
            <label for="username">Email</label>
            <input id="username" name="username" type="email" autocomplete="username" placeholder="officer@vapewatch.gov" required>
          </div>
          <div class="auth-field">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" autocomplete="current-password" placeholder="Enter your password" required>
          </div>
        </div>
        <div id="new-password-fields" class="stack" hidden>
          <p class="auth-note" id="new-password-hint">This account needs a new password before you can continue.</p>
          <div class="auth-field">
            <label for="new-password">New password</label>
            <input id="new-password" name="new-password" type="password" autocomplete="new-password" placeholder="Create a new password">
          </div>
          <div class="auth-field">
            <label for="confirm-password">Confirm password</label>
            <input id="confirm-password" name="confirm-password" type="password" autocomplete="new-password" placeholder="Re-enter the new password">
          </div>
          <div class="auth-secondary-actions">
            <button id="cancel-new-password" class="button button-ghost" type="button">Use a different account</button>
          </div>
        </div>
        <div class="auth-actions">
          <button id="login-submit" class="button" type="submit">Sign in</button>
        </div>
        <div id="login-status" class="auth-status" role="alert" aria-live="assertive"></div>
      </form>
    </section>
    <section id="app-view" hidden>
      <div class="controls">
        <div class="controls-row">
          <div class="controls-group">
            <button id="refresh" class="button" type="button">Refresh</button>
            <button id="load-more" class="button" type="button" disabled>Load more</button>
          </div>
          <div class="spacer"></div>
          <button id="logout" class="button button-ghost" type="button">Sign out</button>
        </div>
        <div id="status" class="status" role="status" aria-live="polite"></div>
      </div>
      <article id="weather-card" class="card weather-card" aria-live="polite">
        <div class="weather-header">
          <h2>2-Hour Weather</h2>
          <span id="weather-updated" class="weather-updated"></span>
        </div>
        <p id="weather-status" class="weather-status">Loading latest forecast…</p>
        <p id="weather-validity" class="weather-validity"></p>
        <div id="weather-groups" class="weather-groups" aria-live="polite" aria-busy="true"></div>
      </article>
      <div class="map-panel" aria-labelledby="map-title">
        <div class="map-toolbar">
          <h2 id="map-title">Report map</h2>
      <div id="map-status" class="map-status" role="status" aria-live="polite"></div>
    </div>
    <div class="map-canvas">
      <div id="reports-map" role="img" aria-label="Map showing report locations"></div>
    </div>
  </div>
  <section id="results" class="grid" aria-live="polite" aria-busy="false"></section>
  <div id="empty-state" class="empty" hidden>No reports available yet. Submissions will appear here automatically.</div>
</section>
</main>
<div id="report-modal-backdrop" class="modal-backdrop" role="dialog" aria-modal="true" aria-labelledby="report-modal-title" hidden>
  <div class="modal-card">
    <header class="modal-header">
      <h2 id="report-modal-title">Report details</h2>
      <button id="report-modal-close" class="modal-close" type="button" aria-label="Close report details">×</button>
    </header>
    <div id="report-modal-body" class="modal-body"></div>
    <footer class="modal-footer">
      <button id="report-modal-dismiss" class="button button-ghost" type="button">Close</button>
    </footer>
  </div>
</div>
<footer>Restricted access: For authorised VapeWatch officers only.</footer>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
  <script>
    const API_BASE_URL = "${api_base_url}";
    const COGNITO_CLIENT_ID = "${cognito_client_id}";
    const COGNITO_REGION = "${cognito_region}";
    const COGNITO_ENDPOINT = "https://cognito-idp." + COGNITO_REGION + ".amazonaws.com/";
    const AUTH_STORAGE_KEY = "vapewatch.officer.auth";
    const TOKEN_EXPIRY_BUFFER_MS = 60000;

    if (!document.body.dataset.auth) {
      document.body.dataset.auth = "anonymous";
    }

    const loginView = document.getElementById("login-view");
    const appView = document.getElementById("app-view");
    const loginForm = document.getElementById("login-form");
    const loginButton = document.getElementById("login-submit");
    const loginStatusEl = document.getElementById("login-status");
    const usernameInput = document.getElementById("username");
    const passwordInput = document.getElementById("password");
    const loginFields = document.getElementById("login-fields");
    const newPasswordFields = document.getElementById("new-password-fields");
    const newPasswordInput = document.getElementById("new-password");
    const confirmPasswordInput = document.getElementById("confirm-password");
    const cancelNewPasswordBtn = document.getElementById("cancel-new-password");

    const statusEl = document.getElementById("status");
    const resultsEl = document.getElementById("results");
    const emptyStateEl = document.getElementById("empty-state");
    const refreshBtn = document.getElementById("refresh");
    const loadMoreBtn = document.getElementById("load-more");
    const logoutBtn = document.getElementById("logout");
    const mapStatusEl = document.getElementById("map-status");
    const mapCanvasEl = document.getElementById("reports-map");
    const weatherCardEl = document.getElementById("weather-card");
    const weatherUpdatedEl = document.getElementById("weather-updated");
    const weatherStatusEl = document.getElementById("weather-status");
    const weatherValidityEl = document.getElementById("weather-validity");
    const weatherGroupsEl = document.getElementById("weather-groups");
